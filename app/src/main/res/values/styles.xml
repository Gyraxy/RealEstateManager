<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorGrey</item>
    </style>

    <!-- SEARCH ACTIVITY -->

    <style name="SearchActivitySpinner">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">50</item>
        <item name="android:background">@drawable/search_bg_transp</item>
    </style>

    <style name="SearchActivityEditText">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">50</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/activity_search_title_txt</item>
        <item name="android:background">@drawable/search_bg_transp</item>
    </style>

    <style name="SearchActivityIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/activity_search_padding_margin</item>
    </style>

    <!-- FRAGMENT DETAIL -->

    <style name="FragmentDetailTextIco">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/fragment_detail_textico_txt</item>
    </style>

    <!-- EDIT/UPDATE ACTIVITY -->
    <style name="EditUpdateActivityTextTitle">
        <item name="android:textSize">@dimen/activity_edit_update_txt</item>
        <item name="android:drawableTint">@color/colorGrey</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">35</item>
    </style>

    <style name="EditUpdateActivityLayout">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditUpdateActivityEditText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/activity_search_title_txt</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditUpdateActivityBtn">
        <item name="android:layout_width">@dimen/activity_edit_update_btn_width</item>
        <item name="android:layout_height">@dimen/activity_edit_update_btn_height</item>
        <item name="android:textSize">@dimen/activity_edit_update_picture_btn</item>
        <item name="android:background">@drawable/button_bg_rounded_corners</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
