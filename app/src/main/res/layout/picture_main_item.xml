<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp">

    <ImageView
            android:id="@+id/picture_main_item_image_imv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_suppress"
            android:layout_alignEnd="@+id/picture_main_item_image_imv"/>

    <TextView
            android:id="@+id/picture_main_item_description_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_alignBottom="@+id/picture_main_item_image_imv"
            android:background="#60000000"
            android:gravity="center"
            android:textSize="14sp"/>

</RelativeLayout>