<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">

    <ImageView
            android:id="@+id/list_acc_item_imv"
            android:layout_width="120dp"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

        <LinearLayout
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

            <TextView
                    android:id="@+id/acc_listview_type_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appartement"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="3dp"/>


            <TextView
                    android:id="@+id/acc_city_type_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manhattan"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="3dp"/>

            <TextView
                    android:id="@+id/acc_price_type_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="250 000 euros"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="3dp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/acc_listview_ref_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="@color/colorBlack"
                    android:text="Ref XXX"
                    android:textSize="20sp"
                    android:padding="3dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>