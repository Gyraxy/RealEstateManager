<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@android:color/white"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/activity_search_fl_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/floating_btn_margin"
            android:src="@drawable/ic_search_icon"
            app:backgroundTint="@color/colorAccent"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/activity_search_padding_margin">

            <TableRow
                    android:paddingTop="@dimen/activity_search_padding_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Spinner
                        android:id="@+id/activity_search_type_sp"
                        style="@style/SearchActivitySpinner"/>

                <Spinner
                        android:id="@+id/activity_search_status_sp"
                        style="@style/SearchActivitySpinner"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <EditText
                        android:hint="@string/price_min"
                        android:id="@+id/activity_search_price_min_edt"
                        android:inputType="number"
                        style="@style/SearchActivityEditText"/>

                <ImageView
                        android:src="@drawable/ic_money"
                        style="@style/SearchActivityIcon"/>

                <EditText
                        android:hint="@string/price_max"
                        android:id="@+id/activity_search_price_max_edt"
                        style="@style/SearchActivityEditText"
                        android:inputType="number"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <EditText
                        android:hint="@string/surface_min"
                        android:id="@+id/activity_search_surf_min_edt"
                        style="@style/SearchActivityEditText"
                        android:inputType="number"/>

                <ImageView
                        android:src="@drawable/ic_surface"
                        style="@style/SearchActivityIcon"/>

                <EditText
                        android:hint="@string/surface_max"
                        android:id="@+id/activity_search_surf_max_edt"
                        style="@style/SearchActivityEditText"
                        android:inputType="number"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <EditText
                        android:hint="@string/room_min"
                        android:id="@+id/activity_search_room_min_edt"
                        style="@style/SearchActivityEditText"
                        android:inputType="number"/>

                <ImageView
                        android:src="@drawable/ic_home"
                        style="@style/SearchActivityIcon"/>

                <EditText
                        android:hint="@string/room_max"
                        android:id="@+id/activity_search_room_max_edt"
                        style="@style/SearchActivityEditText"
                        android:inputType="number"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <EditText
                        android:hint="@string/bedroom_min"
                        android:id="@+id/activity_search_bedroom_min_edt"
                        style="@style/SearchActivityEditText"
                        android:inputType="number"/>

                <ImageView
                        android:src="@drawable/ic_room"
                        style="@style/SearchActivityIcon"/>

                <EditText
                        android:hint="@string/bedroom_max"
                        android:id="@+id/activity_search_bedroom_max_edt"
                        style="@style/SearchActivityEditText"
                        android:inputType="number"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <EditText
                        android:hint="@string/bathroom_min"
                        android:id="@+id/activity_search_bathroom_min_edt"
                        style="@style/SearchActivityEditText"
                        android:inputType="number"/>

                <ImageView
                        android:src="@drawable/ic_bathroom"
                        style="@style/SearchActivityIcon"/>

                <EditText
                        android:hint="@string/bathroom_max"
                        android:id="@+id/activity_search_bathroom_max_edt"
                        style="@style/SearchActivityEditText"
                        android:inputType="number"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <EditText
                        android:hint="@string/picture_min"
                        android:id="@+id/activity_search_picture_min_edt"
                        android:inputType="number"
                        style="@style/SearchActivityEditText"/>

                <ImageView
                        android:src="@drawable/ic_camera"
                        style="@style/SearchActivityIcon"
                        android:contentDescription="@string/none"/>

                <EditText
                        android:hint="@string/picture_max"
                        android:id="@+id/activity_search_picture_max_edt"
                        android:inputType="number"
                        style="@style/SearchActivityEditText"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <EditText
                        android:hint="@string/begin_date"
                        android:id="@+id/activity_search_date_min_edt"
                        android:focusable="false"
                        android:clickable="true"
                        style="@style/SearchActivityEditText"/>

                <ImageView
                        android:src="@drawable/ic_date"
                        style="@style/SearchActivityIcon"
                        android:contentDescription="@string/none"/>

                <EditText
                        android:hint="@string/end_date"
                        android:id="@+id/activity_search_date_max_edt"
                        android:focusable="false"
                        android:clickable="true"
                        style="@style/SearchActivityEditText"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <ImageView
                        android:src="@drawable/ic_location"
                        style="@style/SearchActivityIcon"
                        android:contentDescription="@string/none"/>

                <TextView
                        android:hint="@string/place"
                        android:id="@+id/activity_search_place_edt"
                        style="@style/SearchActivityEditText"/>

            </TableRow>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>